<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>
  
  <tbody>
    <tr>
    <% users.each do |u| %>
      <td><%= attachment_image_tag u, :profile_image, :fill, 40, 40, format:'jpeg', fallback:"noimage.jpg" %></td>
      <td><%= u.name %></td>
      <td>フォロー数：<%= u.followings.count %></td>
      <td>フォロワー数：<%= u.followers.count %></td>
      <td><%= link_to "show", user_path(u.id) %></td>
    </tr>
    <% end %>
  </tbody>

</table>