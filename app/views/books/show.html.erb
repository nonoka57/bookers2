<main>
    <p id="notice"><%= flash[:notice] %> </p>
  <div class="container px-5 px-sm-0">
    <div class="row">

      <%= render 'books/new', book: @book, user: @user %>

      <div class="col-md-8 offset-md-1">
        <h2>Books detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= attachment_image_tag @books.user, :profile_image, :fill, 40, 40, format:'jpeg', fallback:"noimage.jpg" %>
              </td>
              <td><%= link_to @books.title, book_path(@books) %></td>
              <td><%= @books.body %></td>
              <% if @books.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path(@books), class:"btn btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to "Dstroy", book_path(@books), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-sm btn-danger" %>
              </td>
              <% end %>
              
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>