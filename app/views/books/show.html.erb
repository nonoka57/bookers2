<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">

      <%= render 'books/new', book: @book %>

      <div class="col-md-8 offset-md-1">
        <h2>Books detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= image_tag 'noimage.jpg', class:"attachment user profile_image fallback" %>
              </td>
              <td><%= link_to @books.title, book_path(@books) %></td>
              <td><%= @books.body %></td>
              <% if @books.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path(@books), class:"btn btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to "Dstroy", book_path(@books), method: :delete, class:"btn btn-sm btn-danger" %>
              </td>
              <% end %>
              
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>