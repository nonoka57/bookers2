<main>
  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %> </p>
  <% end %>
  <div class="container px-5 px-sm-0">
    <div class="row">
      
      <%= render 'books/new', book: @book %>
      
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              
            <% @books.each do |book| %>
            <td>
                <%= image_tag 'noimage.jpg', class:"attachment user profile_image fallback" %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
              
            </tr>
            <% end %>
              
           
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>